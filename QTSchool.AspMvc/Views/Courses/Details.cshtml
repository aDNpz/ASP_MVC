@model QTSchool.AspMvc.Models.App.Course

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Course</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Designation)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Designation)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Description)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.MaxStudents)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.MaxStudents)
		</dd>
	</dl>

	<!--Students-->
	@if (Model.Students.Any())
	{
		<h5>Student(s)</h5>
		@foreach (var student in Model.Students)
		{
			<dl class="row">
				<dd class="col-sm-4">
					@student.LastName
				</dd>
				<dd class="col-sm-4">
					@student.FirstName
				</dd>
				<dd class="col-sm-4">
					@student.Birthdate
				</dd>
			</dl>
		}
	}
</div>
<div>
	@Html.ActionLink("Edit", "Edit", new { id = Model.Id}) |
	<a asp-action="Index">Back to List</a>
</div>
